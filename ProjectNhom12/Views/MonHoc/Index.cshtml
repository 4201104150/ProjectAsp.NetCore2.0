@model IEnumerable<ProjectNhom12.Models.Monhoc>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenMh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tinchi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaKhoaNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenMh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tinchi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaKhoaNavigation.MaKhoa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaMh">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaMh">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaMh">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
