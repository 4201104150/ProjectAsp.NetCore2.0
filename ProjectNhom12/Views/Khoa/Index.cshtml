@model IEnumerable<ProjectNhom12.Models.Khoa>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSinhVien.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenKhoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThongTinKhoa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenKhoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThongTinKhoa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaKhoa">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaKhoa">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaKhoa">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
