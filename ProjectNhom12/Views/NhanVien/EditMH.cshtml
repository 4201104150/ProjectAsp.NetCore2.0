@model ProjectNhom12.Models.Monhoc

@{
    ViewData["Title"] = "EditMH";
    Layout = "~/Views/Shared/_LayoutNhanVien.cshtml";
}

<h1>Chỉnh sửa môn học</h1>

<h4>Môn học</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditMH">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaMh" />
            <div class="form-group">
                <label asp-for="TenMh" class="control-label"></label>
                <input asp-for="TenMh" class="form-control" />
                <span asp-validation-for="TenMh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tinchi" class="control-label"></label>
                <input asp-for="Tinchi" class="form-control" />
                <span asp-validation-for="Tinchi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaKhoa" class="control-label"></label>
                <select asp-for="MaKhoa" class="form-control" asp-items="ViewBag.MaKhoa"></select>
                <span asp-validation-for="MaKhoa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="dsMon">Trở về</a>
</div>

