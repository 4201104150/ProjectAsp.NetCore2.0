@model ProjectNhom12.Models.Ketqua

@{
    ViewData["Title"] = "EditKQ";
    Layout = "~/Views/Shared/_LayoutNhanVien.cshtml";
}

<h1>Chỉnh sửa KQ</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditKQ">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaSvc" />
            <input type="hidden" asp-for="MaHp" />
            <div class="form-group">
                <label asp-for="Diem" class="control-label"></label>
                <input asp-for="Diem" class="form-control" />
                <span asp-validation-for="Diem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="QLKQ">Trở về</a>
</div>

